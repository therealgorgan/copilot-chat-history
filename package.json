{
  "name": "copilot-chat-history-fork",
  "displayName": "Copilot Chat History (Fork)",
  "description": "Advanced Copilot chat history management with archive, undo, bulk operations, background scanning, leader election, auto-archive/purge, and more. Fork of Arbuzov/copilot-chat-history with 10+ major enhancements.",
  "version": "1.6.0",
  "publisher": "therealgorgan",
  "license": "MIT",
  "author": {
    "name": "therealgorgan",
    "url": "https://github.com/therealgorgan"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/therealgorgan/copilot-chat-history.git"
  },
  "bugs": {
    "url": "https://github.com/therealgorgan/copilot-chat-history/issues"
  },
  "homepage": "https://github.com/therealgorgan/copilot-chat-history#readme",
  "keywords": [
    "copilot",
    "chat",
    "history",
    "ai",
    "assistant",
    "workspace",
    "search"
  ],
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.103.0",
    "node": ">=20.18.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copilot-chat-history",
          "title": "Copilot Chat History",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "copilot-chat-history": [
        {
          "id": "copilotChatHistoryView",
          "name": "Chat Sessions",
          "when": "true"
        },
        {
          "id": "copilotArchiveView",
          "name": "Archive",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "copilotChatHistory.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "copilotChatHistory.archiveRefresh",
        "title": "Refresh Archive",
        "icon": "$(refresh)"
      },
      {
        "command": "copilotChatHistory.search",
        "title": "Search Chat Sessions",
        "icon": "$(search)"
      },
      {
        "command": "copilotChatHistory.clearFilter",
        "title": "Clear Filter",
        "icon": "$(clear-all)"
      },
      {
        "command": "copilotChatHistory.openChat",
        "title": "Open Chat Session",
        "icon": "$(file-text)"
      },
      {
        "command": "copilotChatHistory.openWorkspaceInCurrentWindow",
        "title": "Open Workspace in Current Window",
        "icon": "$(arrow-right)"
      },
      {
        "command": "copilotChatHistory.openWorkspaceInNewWindow",
        "title": "Open Workspace in New Window",
        "icon": "$(link-external)"
      },
      { 
        "command": "copilotChatHistory.openChatJson",
        "title": "Open JSON File",
        "icon": "$(file-code)"
      },
      {
        "command": "copilotChatHistory.exportChatMarkdown",
        "title": "Export Chat as Markdown",
        "icon": "$(export)"
      },
      {
        "command": "copilotChatHistory.exportWorkspaceConversations",
        "title": "Export All Conversations",
        "icon": "$(export)"
      },
      {
        "command": "copilotChatHistory.exportSelectedConversations",
        "title": "Export Selected Conversations",
        "icon": "$(export)"
      },
      {
        "command": "copilotChatHistory.deleteSelectedConversations",
        "title": "Delete Selected Conversations",
        "icon": "$(trash)"
      },
      {
        "command": "copilotChatHistory.deleteConversation",
        "title": "Delete (Archive)",
        "icon": "$(trash)"
      },
      {
        "command": "copilotChatHistory.deleteConversationPermanently",
        "title": "Delete Conversation (Permanent)",
        "icon": "$(trash)"
      },
      {
        "command": "copilotChatHistory.deleteWorkspaceConversations",
        "title": "Delete All Conversations in Workspace (Archive)",
        "icon": "$(trash)"
      },
      {
        "command": "copilotChatHistory.deleteWorkspaceConversationsPermanently",
        "title": "Delete All Conversations in Workspace (Permanent)",
        "icon": "$(trash)"
      },
      {
        "command": "copilotChatHistory.emptyArchive",
        "title": "Empty Archive",
        "icon": "$(trash)"
      },
      {
        "command": "copilotChatHistory.restoreArchivedSession",
        "title": "Restore Archived Conversation",
        "icon": "$(sync)"
      },
      {
        "command": "copilotChatHistory.deleteArchivedSession",
        "title": "Delete Archived Conversation Permanently",
        "icon": "$(trash)"
      },
      {
        "command": "copilotChatHistory.runAutoArchiveNow",
        "title": "Run Auto-Archive Now",
        "icon": "$(sync)"
      },
      {
        "command": "copilotChatHistory.openAutoArchiveSettings",
        "title": "Auto-Archive Options",
        "icon": "$(settings)"
      },
      {
        "command": "copilotChatHistory.archiveConversation",
        "title": "Archive",
        "icon": "$(archive)"
      },
      {
        "command": "copilotChatHistory.archiveAllConversations",
        "title": "Archive All",
        "icon": "$(archive)"
      },
      {
        "command": "copilotChatHistory.unarchiveAllSessions",
        "title": "Unarchive All",
        "icon": "$(debug-restart)"
      },
      {
        "command": "copilotChatHistory.loadMoreConversations",
        "title": "Load More Conversations",
        "icon": "$(ellipsis)"
      },
      {
        "command": "copilotChatHistory.importChatSession",
        "title": "Import Chat (Pre-load in Copilot)",
        "icon": "$(debug-disconnect)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "copilotChatHistory.search",
          "when": "view == copilotChatHistoryView",
          "group": "navigation@1"
        },
        {
          "command": "copilotChatHistory.clearFilter",
          "when": "view == copilotChatHistoryView",
          "group": "navigation@2"
        },
        {
          "command": "copilotChatHistory.refresh",
          "when": "view == copilotChatHistoryView",
          "group": "navigation@3"
        },
        {
          "command": "copilotChatHistory.openAutoArchiveSettings",
          "when": "view == copilotChatHistoryView",
          "group": "navigation@4"
        },
        {
          "command": "copilotChatHistory.emptyArchive",
          "when": "view == copilotArchiveView",
          "group": "navigation@1"
        },
        {
          "command": "copilotChatHistory.archiveRefresh",
          "when": "view == copilotArchiveView",
          "group": "navigation@2"
        },
        {
          "command": "copilotChatHistory.runAutoArchiveNow",
          "when": "view == copilotArchiveView",
          "group": "navigation@2"
        },
        {
          "command": "copilotChatHistory.openAutoArchiveSettings",
          "when": "view == copilotArchiveView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "copilotChatHistory.openChat",
          "when": "view == copilotChatHistoryView && viewItem == chatSession",
          "group": "inline@1"
        },
        {
          "command": "copilotChatHistory.archiveConversation",
          "when": "view == copilotChatHistoryView && viewItem == chatSession",
          "group": "inline@2"
        },
        {
          "command": "copilotChatHistory.deleteConversation",
          "when": "view == copilotChatHistoryView && viewItem == chatSession",
          "group": "inline@3"
        },
        {
          "command": "copilotChatHistory.importChatSession",
          "when": "view == copilotChatHistoryView && viewItem == chatSession",
          "group": "context@1"
        },
        {
          "command": "copilotChatHistory.openChatJson",
          "when": "view == copilotChatHistoryView && viewItem == chatSession",
          "group": "context@2"
        },
        {
          "command": "copilotChatHistory.exportChatMarkdown",
          "when": "view == copilotChatHistoryView && viewItem == chatSession",
          "group": "context@3"
        },
        {
          "command": "copilotChatHistory.deleteConversationPermanently",
          "when": "view == copilotChatHistoryView && viewItem == chatSession",
          "group": "context@4"
        },
        {
          "command": "copilotChatHistory.openWorkspaceInCurrentWindow",
          "when": "view == copilotChatHistoryView && viewItem == workspaceGroup",
          "group": "inline@1"
        },
        {
          "command": "copilotChatHistory.openWorkspaceInNewWindow",
          "when": "view == copilotChatHistoryView && viewItem == workspaceGroup",
          "group": "inline@2"
        },
        {
          "command": "copilotChatHistory.archiveAllConversations",
          "when": "view == copilotChatHistoryView && viewItem == workspaceGroup",
          "group": "inline@3"
        },
        {
          "command": "copilotChatHistory.deleteWorkspaceConversations",
          "when": "view == copilotChatHistoryView && viewItem == workspaceGroup",
          "group": "inline@4"
        },
        {
          "command": "copilotChatHistory.exportWorkspaceConversations",
          "when": "view == copilotChatHistoryView && viewItem == workspaceGroup",
          "group": "context@1"
        },
        {
          "command": "copilotChatHistory.deleteWorkspaceConversationsPermanently",
          "when": "view == copilotChatHistoryView && viewItem == workspaceGroup",
          "group": "context@2"
        },
        {
          "command": "copilotChatHistory.restoreArchivedSession",
          "when": "view == copilotArchiveView && viewItem == archivedSession",
          "group": "inline@1"
        },
        {
          "command": "copilotChatHistory.importChatSession",
          "when": "view == copilotArchiveView && viewItem == archivedSession",
          "group": "inline@2"
        },
        {
          "command": "copilotChatHistory.deleteArchivedSession",
          "when": "view == copilotArchiveView && viewItem == archivedSession",
          "group": "inline@3"
        },
        {
          "command": "copilotChatHistory.restoreArchivedSession",
          "when": "view == copilotArchiveView && viewItem == archivedSession",
          "group": "context@1"
        },
        {
          "command": "copilotChatHistory.importChatSession",
          "when": "view == copilotArchiveView && viewItem == archivedSession",
          "group": "context@2"
        },
        {
          "command": "copilotChatHistory.deleteArchivedSession",
          "when": "view == copilotArchiveView && viewItem == archivedSession",
          "group": "context@3"
        },
        {
          "command": "copilotChatHistory.unarchiveAllSessions",
          "when": "view == copilotArchiveView && viewItem == archiveGroup",
          "group": "inline@1"
        },
        {
          "command": "copilotChatHistory.emptyArchive",
          "when": "view == copilotArchiveView && viewItem == archiveGroup",
          "group": "inline@2"
        },
        {
          "command": "copilotChatHistory.unarchiveAllSessions",
          "when": "view == copilotArchiveView && viewItem == archiveGroup",
          "group": "context@1"
        },
        {
          "command": "copilotChatHistory.emptyArchive",
          "when": "view == copilotArchiveView && viewItem == archiveGroup",
          "group": "context@2"
        }
      ]
    }
    ,
    "configuration": {
      "type": "object",
      "title": "Copilot Chat History Settings (Fork)",
      "properties": {
        "copilotChatHistory.autoPurge.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic emptying (purge) of archived conversations on a schedule."
        },
        "copilotChatHistory.autoPurge.days": {
          "type": "number",
          "default": 90,
          "description": "Default retention period in days; archives older than this will be eligible for automatic purge when auto-purge runs."
        },
        "copilotChatHistory.autoPurge.checkIntervalHours": {
          "type": "number",
          "default": 24,
          "description": "How often (in hours) to check and run the auto-purge job when enabled."
        },
        "copilotChatHistory.autoArchive.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Automatically archive (or delete) oldest conversations when a workspace exceeds the configured session limit."
        },
        "copilotChatHistory.autoArchive.maxSessions": {
          "type": "number",
          "default": 200,
          "description": "Maximum number of chat sessions to keep per workspace before auto-archiving/deleting oldest sessions."
        },
        "copilotChatHistory.autoArchive.action": {
          "type": "string",
          "enum": ["archive", "delete"],
          "default": "archive",
          "description": "When auto-archiving triggers, perform either 'archive' (move to extension archive) or 'delete' (send permanently to OS recycle bin)."
        },
        "copilotChatHistory.autoArchive.checkIntervalHours": {
          "type": "number",
          "default": 24,
          "description": "How often (in hours) to check for workspace overflow and perform auto-archive/delete when enabled."
        },
        "copilotChatHistory.autoArchive.scope": {
          "type": "string",
          "enum": ["allWorkspaces", "currentWorkspace"],
          "default": "allWorkspaces",
          "description": "When set to 'allWorkspaces' the extension will monitor all known workspaces. When set to 'currentWorkspace' it will only monitor the active workspace."
        },
        "copilotChatHistory.autoArchive.leaderElectionEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable leader election to ensure only one VS Code instance performs auto-archival across multiple windows."
        },
        "copilotChatHistory.autoArchive.lockTTLSeconds": {
          "type": "number",
          "default": 120,
          "description": "Seconds after which a master lock is considered expired if no heartbeat is received."
        },
        "copilotChatHistory.autoArchive.heartbeatIntervalSeconds": {
          "type": "number",
          "default": 30,
          "description": "How often (in seconds) the master instance should refresh its lock heartbeat."
        },
        "copilotChatHistory.autoArchive.leaderCheckIntervalSeconds": {
          "type": "number",
          "default": 10,
          "description": "How often (in seconds) instances should check for leader availability and attempt to acquire the master role if available."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "package:vsix": "npm run package && npx @vscode/vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "publish:vsce": "npm run package && npx @vscode/vsce publish --no-dependencies",
    "publish:ovsx": "npm run package && npx ovsx publish --no-dependencies",
    "publish:both": "npm run publish:vsce && npm run publish:ovsx",
    "verify": "npx @vscode/vsce ls && npx @vscode/vsce package --allow-missing-repository"
  },
  "dependencies": {
    "trash": "^6.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "ovsx": "^0.9.5",
    "sharp": "^0.34.3",
    "typescript": "^5.9.2"
  }
}
